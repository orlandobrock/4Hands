              <a href="anime/{{animes.id}}">
                <img src="{{animes.capa_anime}}" alt="{{animes.nm_anime}}">
                <h2>{{animes.nm_anime}}</h2>
              </a>
            </div>
          {% endfor %}

        </div>
      </div>
      <div class="feature-index">
        <h3>DESTAQUES</h3>
        <div class="item">
